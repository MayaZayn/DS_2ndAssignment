// 2 ways to sort the queue

#include <iostream>
#include <queue>
using namespace std;

template <class T>
queue<T> sortQueue(queue<T> &q) {
    vector<int> v;
    while (!q.empty()) {
        v.push_back(q.front());
        q.pop();
    }

    sort(v.begin(), v.end());
    for (int & i : v) {
        q.push(i);
    }
    return q;
}

template <class T>
queue<T> sortQueue(queue<T> &q, int sz) {
    int mx = INT_MIN;
    while (sz--) {
        q.push(q.front());
        mx = max(mx, q.front());
        q.pop();
    }

    vector<int> v(mx + 1);
    while (!q.empty()) {
        v[q.front()]++;
        q.pop();
    }

    for (int i = 0; i < v.size(); ++i) {
        while (v[i]--)
            q.push(i);
    }

    return q;
}

int main() {
    queue<int> q;
    q.push(3);
    q.push(15);
    q.push(2);
    q.push(4);

    sortQueue(q);

    while (!q.empty()) {
        cout << q.front() << " ";
        q.pop();
    }

    cout << '\n';

/*--------------------------------------------------------------------------------------------------------------------*/

    q.push(9);
    q.push(1);
    q.push(2);
    q.push(1);

    sortQueue(q, q.size());

    while (!q.empty()) {
        cout << q.front() << " ";
        q.pop();
    }

    return 0;
}
