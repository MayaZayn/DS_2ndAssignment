template <class T>
queue<T> sortQueue(queue<T> &q, int sz) {
    int mx = INT_MIN;
    while (sz--) {
        q.push(q.front());
        mx = max(mx, q.front());
        q.pop();
    }

    vector<int> v(mx + 1);
    while (!q.empty()) {
        v[q.front()]++;
        q.pop();
    }

    for (int i = 0; i < v.size(); ++i) {
        while (v[i]--)
            q.push(i);
    }

    return q;
}

template <class T>
queue<T> sortQueue(queue<T> &q) {
    int sz = q.size();
    for (int i = 0; i < sz; ++i) {
        int mnIndx = 0, mnVal = q.front();
        for (int j = 0; j < sz; ++j) {
            int cur = q.front();
            if (j < sz - i && cur < mnVal) {
                mnVal = q.front();
                mnIndx = j;
            }
            q.pop();
            q.push(cur);
        }
        for (int j = 0; j < sz; ++j) {
            if (j != mnIndx) {
                q.push(q.front());
            }
            q.pop();
        }
        q.push(mnVal);
    }
    return q;
}

int main() {
    queue<int> q;
    q.push(3);
    q.push(15);
    q.push(2);
    q.push(4);

    sortQueue(q);

    while (!q.empty()) {
        cout << q.front() << " ";
        q.pop();
    }

    cout << '\n';

/*--------------------------------------------------------------------------------------------------------------------*/

    q.push(9);
    q.push(1);
    q.push(2);
    q.push(1);

    sortQueue(q, q.size());

    while (!q.empty()) {
        cout << q.front() << " ";
        q.pop();
    }

    return 0;
}
